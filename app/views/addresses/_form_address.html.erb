<div class="panel panel-default">
  <div class="panel-heading" role="tab">
    <h4 class="panel-title">
      <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapse-address" aria-expanded="true" aria-controls="collapseOne">
        Endereço
      </a>
    </h4>
  </div>
  <div id="collapse-address" class="panel-collapse collapse" role="tabpanel" aria-spanledby="headingOne">
    <div class="panel-body">
      <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
        <div class="row form-group">
          <%= address_form.label :address, 'Endereço:', class: "col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= address_form.text_field :address, class: "form-control" %>
          </div>
        </div>
        <div class="row form-group">
          <%= address_form.label :neighborhood, 'Bairro:', class: "col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= address_form.text_field :neighborhood, class: "form-control" %>
          </div>
        </div>
        <div class="row form-group">
          <%= address_form.label :zipcode, 'CEP:', class: "col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= address_form.text_field :zipcode, class: "form-control cep-mask" %>
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
        <div class="row form-group">
          <%= address_form.label :number, 'Número:', class: "col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= address_form.text_field :number, class: "form-control" %>
          </div>
        </div>
        <div class="row form-group">
          <%= address_form.label :city, 'Cidade:', class: "col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= address_form.text_field :city, class: "form-control" %>
          </div>
        </div>
        <div class="row form-group">
          <%= address_form.label :country, 'País:', class: "col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= address_form.text_field :country, class: "form-control" %>
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
        <div class="row form-group">
          <%= address_form.label :complement, 'Complemento:', class: "col-sm-4 control-label" %>
          <div class="col-sm-8">
            <%= address_form.text_field :complement, class: "form-control" %>
          </div>
        </div>
        <div class="row form-group">
          <%= address_form.label :state, 'Estado:', class: "col-sm-4 control-label" %>
          <div class="col-sm-8">
            <%= address_form.text_field :state, class: "form-control" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>