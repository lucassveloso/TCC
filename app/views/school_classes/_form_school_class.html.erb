<div class="panel panel-default">
  <div class="panel-heading" role="tab">
    <h4 class="panel-title">
      <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapse-school-class" aria-expanded="true" aria-controls="collapseOne">
        Turma
      </a>
    </h4>
  </div>
  <div id="collapse-school-class" class="panel-collapse collapse in" role="tabpanel" aria-spanledby="headingOne">
    <div class="panel-body">
      <div class="row panel-body">
        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
          <div class="row form-group">
            <%= school_class_form.label :number, class: "col-sm-3 control-label" do %>
              Número da Turma: <span class="mandatory">*</span>
            <% end %>
            <div class="col-sm-9">
              <%= school_class_form.text_field :number, class: "form-control validate-empty" %>
            </div>
          </div>
          <div class="row form-group">
            <%= school_class_form.label :classroom, 'Sala:', class: "col-sm-3 control-label" %>
            <div class="col-sm-9">
              <%= school_class_form.text_field :classroom, class: "form-control" %>
            </div>
          </div>
          <div class="row form-group">
            <%= school_class_form.label :grade, class: "col-sm-3 control-label" do %>
              Série/Ano: <span class="mandatory">*</span>
            <% end %>
            <div class="col-sm-9">
              <%= school_class_form.text_field :grade, class: "form-control validate-empty" %>
            </div>
          </div>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
          <div class="row form-group">
            <%= school_class_form.label :notes, 'Observações:', class: "col-sm-3 control-label" %>
            <div class="col-sm-9">
              <%= school_class_form.text_area :notes, class: "form-control"%>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
