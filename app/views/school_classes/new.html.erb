<div class="text-center">
  <h1>Cadastrar Turma</h1>
</div>
<%= form_for(@school_class, :html=>{:id=>"form-school_class"}) do |school_class_form| %>
<%= render 'form', school_class_form:school_class_form %>
<div class="row">
  <div class="form-group">
    <div class="col-lg-offset-4 col-lg-4 margin-end-top margin-end-bot">
      <%= school_class_form.submit "Criar Turma", :class => "btn btn-default btn-lg btn-block btn-primary", id: "confirm-school_class" %>
    </div>
  </div>
</div>
<% end %>