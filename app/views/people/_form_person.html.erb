<div class="panel panel-default">
  <div class="panel-heading" role="tab">
    <h4 class="panel-title">
      <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapse-identification" aria-expanded="true" aria-controls="collapseOne">
        Identificação
      </a>
    </h4>
  </div>
  <div id="collapse-identification" class="panel-collapse collapse in" role="tabpanel" aria-spanledby="headingOne">
    <div class="panel-body">
      <div class="col-xs-12 col-sm-6 col-md-3 col-lg-3">
        <div class="row form-group buttons-upload">
          <a href="#" id="upload_widget_opener">Enviar Imagem</a>
          <a href="#" class="btn btn-danger" id="btn-delete-image">Apagar Imagem</a>
        </div>
        <div class="row form-group">
          <%= person_form.hidden_field :photo_url, id: 'photo_url' %>
          <%= image_tag @student.person.photo_url, id: 'img_photo_person', class:"img-responsive img-thumbnail"  %>
        </div>
      </div>
      <div class="col-xs-12 col-sm-6 col-md-5 col-lg-5">
        <div class="row form-group">
          <%= person_form.label :name, 'Nome:', class: "col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= person_form.text_field :name, class: "form-control" %>
          </div>
        </div>
        <div class="row form-group">
          <%= person_form.label :phone, 'Telefone:', class: "col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= person_form.text_field :phone, class: 'form-control phone-mask' %>
          </div>
        </div>
        <div class="row form-group">
          <%= person_form.label :cellphone, 'Celular:', class: "col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= person_form.text_field :cellphone, class: 'form-control phone-mask' %>
          </div>
        </div>
        <div class="row form-group">
          <%= person_form.label :email, 'Email:', class: "col-sm-3 control-label" %>
          <div class="col-sm-9">
            <%= person_form.text_field :email, class: "form-control" %>
          </div>
        </div>
        <div class="row form-group">
            <%= person_form.label :birthdate, 'Data de Nascimento:', class: "col-sm-3 control-label" %>
            <div class="col-sm-9">
              <%= person_form.date_field :birthdate, class: 'form-control date-mask' %>
            </div>
        </div>
      </div>
      <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
        <div class="row form-group">
          <%= person_form.label :genre, 'Gênero:', class: "col-sm-4 control-label" %>
          <div class="col-sm-8">
            <%= person_form.select :genre, [['Selecione',nil], 'Masculino', 'Feminino', 'Outro'], {}, class: "form-control" %>
          </div>
        </div>
        <div class="row form-group">
          <%= person_form.label :ethnicity, 'Etnia:', class: "col-sm-4 control-label" %>
          <div class="col-sm-8">
            <%= person_form.text_field :ethnicity, class: "form-control" %>
          </div>
        </div>
        <div class="row form-group">
          <%= person_form.label :nationality, 'Nacionalidade:', class: "col-sm-4 control-label" %>
          <div class="col-sm-8">
            <%= person_form.text_field :nationality, class: "form-control" %>
          </div>
        </div>
        <div class="row form-group">
          <%= person_form.label :naturalness, 'Naturalidade:', class: "col-sm-4 control-label" %>
          <div class="col-sm-8">
            <%= person_form.text_field :naturalness, class: "form-control" %>
          </div>
        </div>
        <div class="row form-group">
          <%= person_form.label :religion, 'Religião:', class: "col-sm-4 control-label" %>
          <div class="col-sm-8">
            <%= person_form.text_field :religion, class: "form-control" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>